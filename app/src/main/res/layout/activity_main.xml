<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#E88F72">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="302dp"
        android:layout_height="53dp"
        android:text="Activity 1"
        android:textAlignment="center"
        android:textColor="#006064"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <EditText
        android:id="@+id/edtTxtNumber"
        android:layout_width="338dp"
        android:layout_height="51dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="31dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Enter any Number "
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="HardcodedText"
        android:autofillHints="" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="167dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtNumber"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtView"
        android:layout_width="109dp"
        android:layout_height="45dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="210dp"
        android:text="Result :"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNext"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/edtResultText"
        android:layout_width="146dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="193dp"
        android:ems="10"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textAlignment="center"
        android:paddingTop="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.265"
        app:layout_constraintStart_toEndOf="@+id/txtView"
        app:layout_constraintTop_toBottomOf="@+id/edtTxtNumber"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>