<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="#DBA4E4">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="302dp"
        android:layout_height="53dp"
        android:text="Activity 2"
        android:textAlignment="center"
        android:textColor="#616161"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="10dp"
        android:text="Received Number :"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@+id/edtReceived"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/edtReceived"
        android:layout_width="146dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textAlignment="center"
        android:paddingTop="27sp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="166dp"
        android:ems="10"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginStart="153dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="167dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtReceived"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>